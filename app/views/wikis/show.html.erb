<div>
    <h1>
        <%= @wiki.title %> <br>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <p><%= markdown(@wiki.body) %></p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
        <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    </div>
</div>

<div>
    <% if !(@wiki.private?) || @wiki.user_id == current_user.id || @wiki.collaborators.include?(@user) %>
        <%= link_to "Add collaborators", wiki_collaborator_path(@wiki.id), class: 'btn btn-success' %>
        <%= link_to "Remove collaborators", wiki_collaborator_remove_path(@wiki.id), class: 'btn btn-danger' %>
    <% end %>
</div>